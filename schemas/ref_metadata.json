{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kalitta.com/schemas/ref_metadata.json",
  "title": "REF Metadata Schema",
  "description": "JSON Schema for Reference (REF) YAML front matter metadata",
  "type": "object",
  "required": [
    "title",
    "category",
    "document_id",
    "owner",
    "effective_date",
    "status",
    "revision"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200,
      "description": "Document title"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Document tags for categorization"
    },
    "category": {
      "type": "string",
      "enum": ["REF"],
      "description": "Document category (must be REF)"
    },
    "document_id": {
      "type": "string",
      "pattern": "^REF-[0-9]{3,4}$",
      "description": "Document ID in format REF-####"
    },
    "owner": {
      "type": "string",
      "minLength": 2,
      "description": "Document owner (author/maintainer)"
    },
    "approver": {
      "type": ["string", "null"],
      "description": "Document approver"
    },
    "effective_date": {
      "type": ["string", "null"],
      "pattern": "^([0-9]{4}-[0-9]{2}-[0-9]{2})?$",
      "description": "Effective date in YYYY-MM-DD format"
    },
    "status": {
      "type": "string",
      "enum": ["Draft", "Review", "Active", "Retired"],
      "description": "Document lifecycle status"
    },
    "upstream_apn": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of upstream APN dependencies"
    },
    "department": {
      "type": "string",
      "description": "Department responsible for this document"
    },
    "revision": {
      "type": "integer",
      "minimum": 0,
      "description": "Document revision number"
    }
  },
  "additionalProperties": true
}
